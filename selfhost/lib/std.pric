def print_s(str_)
  var i = 0;
  var c = char_at(str_, i);

  while (c != 0)
    putchar(c);
    i = i + 1;
    c = char_at(str_, i);
  end
end

def println(str_)
  print_s(str_);
  putchar(C_LF());
end

def print_i(arg_n)
  var [8]s_temp;

  unparse_int(&s_temp, arg_n);
  print_s(&s_temp);
end

def unparse_int(dest_, arg_n)
  var n = arg_n;
  var div;
  var mod;
  var [8]buf;
  var digit = 0;
  var do_break = FALSE();
  var i;
  var dest_offset = 0;

  if (n < 0)
    aset(dest_, 0, 45); # -
    n = n * -1;
    dest_offset = 1;
  end

  while (__not(do_break))
    if (n < 10)
      aset(&buf, digit, n);
      do_break = TRUE();
    else
      div = __div(n, 10);
      mod = __mod(n, 10);
      aset(&buf, digit, mod);

      n = div;
      digit = digit + 1;
    end
  end

  i = digit;
  while (__le(0, i))
    aset(
      dest_,
      dest_offset + __sub(digit, i),
      48 + aget(&buf, i)
    );
    i = __sub(i, 1);
  end

  aset(dest_, dest_offset + digit + 1, 0);
end

def panic(errno)
  putchar(C_LF());
  putchar( 69); # E
  putchar( 61); # =
  print_i(errno);
  putchar( 10); # LF
  _panic();
end

def read_stdin_all(dest_, limit)
  var i = 0;
  var c;
  var do_break = FALSE();

  while (__not(do_break))
    if (i == limit)
      panic(146); # read_stdin_all: too large input
    end

    c = getchar();
    if (c == -1)
      aset(dest_, i, 0);
      do_break = 1;
    else
      aset(dest_, i, c);
      i = i + 1;
    end
  end
end

