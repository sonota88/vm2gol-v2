def assert(exp, act, errno)
  if (exp != act)
    putchar(101); # e (expected)

    putchar(C_SPC());
    print_i(exp);
    putchar(C_COMMA());
    putchar(C_SPC());

    putchar( 97); # a (actual)
    putchar(C_SPC());
    print_i(act);
    putchar(C_LF());
    
    panic(errno);
  end
end

def aset(array_, i, val)
  *(array_ + i) = val;
end

def aget(array_, i)
  return *(array_ + i);
end

