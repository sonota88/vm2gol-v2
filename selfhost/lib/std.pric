# TODO <= 演算子を用意するまでの代替
def __le(a, b)
  case
  when (a == b)
    return TRUE();
  when (a < b)
    return TRUE();
  else
    return FALSE();
  end
end

# TODO / 演算子を用意するまでの代替
def __div(a, b)
  var temp = a;
  var count = 0;

  while (__le(b, temp))
    temp = __sub(temp, b);
    count = count + 1;
  end

  return count;
end

# TODO % 演算子を用意するまでの代替
def __mod(a, b)
  var temp = a;

  while (__le(b, temp))
    temp = __sub(temp, b);
  end

  return temp;
end
